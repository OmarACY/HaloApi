@model IEnumerable<HaloApp.Models.Enemy>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>Halo Enemies</h2>
    </div>    
    <div class="col-md-3"></div>
</div>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <div class="thumbnail">
                <img src="@item.SmallIconImageUrl" alt="#">
                <div class="caption text-center">
                    <h3>@item.Name</h3>
                    <p>@item.Faction</p>
                    <a href="@Url.Action("Details","Enemies",new {id = item.Id})" class="btn btn-default btn-md">
                        <span class="glyphicon glyphicon-eye-open"></span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <br />
}
